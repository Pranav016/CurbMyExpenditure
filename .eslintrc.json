{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": ["react-app", "prettier"],
	"parserOptions": {
		"ecmaVersion": 12
	},
	"plugins": ["react", "prettier"],
	"rules": {
		"prettier/prettier": [
			2,
			{
				"singleQuote": true,
				"trailingComma": "es5",
				"jsxBracketSameLine": true,
				"useTabs": true,
				"endOfLine": "auto",
				"jsxSingleQuote": true
			}
		],
		"arrow-body-style": "off",
		"prefer-arrow-callback": "off",
		"spaced-comment": [2, "always"]
	}
}
