{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": ["react-app", "prettier"],
	"parserOptions": {
		"ecmaVersion": 12
	},
	"plugins": ["react", "prettier"],
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"singleQuote": true,
				"trailingComma": "es5",
				"tabWidth": 4,
				"jsxBracketSameLine": true
			}
		],
		"arrow-body-style": "off",
		"prefer-arrow-callback": "off"
	}
}
