{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": ["react-app", "prettier"],
	"parserOptions": {
		"ecmaVersion": 12
	},
	"plugins": ["react", "prettier"],
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"singleQuote": true,
				"trailingComma": "es5",
				"jsxBracketSameLine": true,
				"useTabs": true,
				"endOfLine": "auto",
				"jsxSingleQuote": true
			}
		],
		"arrow-body-style": "off",
		"prefer-arrow-callback": "off",
		"quotes": ["error", "single"],
		"space-infix-ops": ["warn", { "int32Hint": false }],
		"space-unary-ops": [
			"warn",
			{
				"words": true,
				"nonwords": false,
				"overrides": {
					"++": true
				}
			}
		]
	}
}
